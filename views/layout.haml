!!! 5
%html
  %head
    %title= "Stand"
    %link{ :href => "/css/bootstrap.css", :media => "screen", :rel => "stylesheet" }
    %link{ :href => "/css/bootstrap-responsive.css", :media => "screen", :rel => "stylesheet" }
    %meta{ :name => "viewport", :content=>"width=device-width, initial-scale=1.0"}
  %body
    .container-fluid
      .row-fluid
        .span12
          - if flash[:notice]
            .alert.alert-info
              = flash[:notice]
              %a.close{ 'data-dismiss' => "alert"} x
      .row-fluid
        .span3
          %ul.nav.nav-list
            /%li
            /  %a{href: '/'} Home
            /%li
            /  %a{href: '/import'} Import
            %li
              %form{ :action => "/reset", :method => "post"}
                %input{class: 'btn', :type => "submit", :name => "reset", :value => 'Reset'}
            %li
              %form{ :action => "/email", :method => "post"}
                %input{ class: 'btn', :type => "submit", :name => "email", :value => 'Email'}

          %ul.unstyled.nav.nav-list
            - @stand.users.each do |user|
              %li
                = "#{user.first} #{user.last}"
        .span9
          = yield



    %script{ :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js", :type => "text/javascript" }
    %script{ :src => "/js/bootstrap.js", :type => "text/javascript" }
